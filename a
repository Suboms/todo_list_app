

  const [taskArray, setTaskArray] = useState([]);
  const [taskTitle, setTaskTitle] = useState("");
  const [taskDetail, setTaskDetail] = useState("");
  useEffect(() => {
    const addTaskBtn = document.getElementById("add-to-task");
    console.log(addTaskBtn);
    const addTaskForm = document.querySelector(".add-task-form");
    console.log(addTaskForm);
    const indexContainer = document.querySelector(".container");

    const handleAddTaskClick = () => {
      addTaskForm.style.display = "block";
      indexContainer.style.display = "none";
    };

    addTaskBtn.addEventListener("click", handleAddTaskClick);

    return () => {
      addTaskBtn.removeEventListener("click", handleAddTaskClick);
    };
  }, []);
  

  const handleAddTask = () => {
    createTask(taskTitle, taskDetail);
    setTaskTitle("");
    setTaskDetail("");
  };



   
